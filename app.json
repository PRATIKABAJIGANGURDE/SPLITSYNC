{
  "expo": {
    "name": "SplitSync",
    "slug": "splitsync",
    "version": "1.1.2",
    "orientation": "portrait",
    "icon": "./assets/images/icon.jpeg",
    "scheme": "splitsync-app",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.jpeg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.splitsync.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch"
        ],
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SplitSync needs your location to share your position with trip members even when the app is closed.",
        "NSLocationWhenInUseUsageDescription": "SplitSync needs your location to share your position with trip members.",
        "NSLocationAlwaysUsageDescription": "SplitSync needs your location to share your position with trip members even when the app is closed.",
        "NSMicrophoneUsageDescription": "SplitSync needs access to your microphone to send walkie-talkie voice messages to your trip members."
      }
    },
    "android": {
      "versionCode": 5,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.jpeg",
        "backgroundColor": "#ffffff"
      },
      "package": "com.splitsync.app",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://splitsync.app/"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.1.20",
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "minSdkVersion": 24
          }
        }
      ],
      "expo-font",
      "@react-native-community/datetimepicker",
      "expo-web-browser",
      [
        "expo-av",
        {
          "microphonePermission": "Allow SplitSync to access your microphone to send walkie-talkie messages."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": "https://splitsync.app/"
      },
      "eas": {
        "projectId": "fbef358a-1923-4a18-b59b-e6ae50f2aaa5"
      }
    }
  }
}